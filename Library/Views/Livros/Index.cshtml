@{
    ViewData["Title"] = "Livros";
    var livro = ViewBag.Livro;
    var pev = "; ";
    var virg = ", ";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Título
            </th>
            <th>
                Edição
            </th>
            <th>
                Ano
            </th>
            <th>
                Editora
            </th>
            <th>
                Autor
            </th>
            <th>
                Assunto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in livro)
        {
            <tr>
                <td>
                    @item.Titulo
                </td>
                <td>
                    @item.Edicao
                </td>
                <td>
                    @item.Ano
                </td>
                <td>
                    @item.Editora
                </td>
                <td>
                    @foreach (var autores in item.Autores)
                    {
                        @autores @pev

                    }
                </td>
                <td>
                    @foreach (var assuntos in item.Assuntos)
                    {
                        @assuntos @virg
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
