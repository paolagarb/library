@{
    var livro = ViewBag.Livro;
    var pev = "; ";
    var virg = ", ";
}
<br />
@foreach (var titulo in livro)
{
<h1 class="text-center">@titulo.Titulo</h1>
}
<br />

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @foreach (var titulo in livro)
            {
                @titulo.Titulo
            }
        </dd>
        <dt class="col-sm-2">
            Edição
        </dt>
        <dd class="col-sm-10">
            @foreach (var edicao in livro)
            {
                @edicao.Edicao
            }
        </dd>
        <dt class="col-sm-2">
            Ano
        </dt>
        <dd class="col-sm-10">
            @foreach (var ano in livro)
            {
                @ano.Ano
            }
        </dd>
        <dt class="col-sm-2">
            Editora
        </dt>
        <dd class="col-sm-10">
            @foreach (var editora in livro)
            {
                @editora.Editora
            }
        </dd>
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @foreach (var livros in livro)
            {
                @foreach (var autor in livros.Autores)
                {
                    @autor @pev
                }
            }
        </dd>
        <dt class="col-sm-2">
            Assunto
        </dt>
        <dd class="col-sm-10">
            @foreach (var livros in livro)
            {
                @foreach (var assunto in livros.Assuntos)
                {
                    @assunto @virg
                }
            }
        </dd>

    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@livro.Id">Editar</a> |*@
    <a asp-action="Index">Voltar</a>
</div>
