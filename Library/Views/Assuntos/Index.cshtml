@model IEnumerable<Library.Models.Assunto>

@{
    ViewData["Title"] = "Assuntos";
}

<div class="d-flex flex-row justify-content-center">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-success ml-2">+</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="Livros" asp-action="Create" class="btn btn-success text-center w-50 d-flex justify-content-center">Adicionar Livro</a>