@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<br />
<form id="account" method="post">
    <div class="div-login">
        <section class="d-flex flex-column justify-content-center w-100 login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-dark w-25 login d-flex justify-content-center">Entrar</button>
            </div>
            <div class="login">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                </p>
            </div>
        </section>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
